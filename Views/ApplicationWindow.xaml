<Window x:Name="Application" x:Class="ZbW.DBAdvanced_ProgrammingAdvanced.PabloBaechler.ERP.Views.ApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZbW.DBAdvanced_ProgrammingAdvanced.PabloBaechler.ERP.Views"
        mc:Ignorable="d"
        Title="ApplicationWindow" Height="450" Width="800" WindowStyle="None">
    <Grid x:Name="grdApplication">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="293*"/>
        </Grid.ColumnDefinitions>
        <TreeView Grid.Column="0" x:Name="trvApplications" HorizontalAlignment="Left" Height="442" VerticalAlignment="Top" Width="200"/>
        <Viewbox x:Name="vwbLogo" HorizontalAlignment="Left" Height="442" Margin="0,0,-2,0" VerticalAlignment="Top" Width="585" Grid.Column="1">
            <Image x:Name="imgLogo" Height="442" Width="585" Source="logo-zbw.png"/>

        </Viewbox>

    </Grid>
</Window>
